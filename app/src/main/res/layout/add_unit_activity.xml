<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Your units will appear here"
            android:layout_width="360dp"
            android:layout_height="306dp"
            android:id="@+id/addableUnits"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.063"/>

    <Button
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doneButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"/>

    <Switch
            android:text="Player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerSwitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="32dp"/>

    <Button
            android:text="Swordman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swordman"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="392dp"
            android:layout_marginStart="24dp"/>

    <Button
            android:text="Longbow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longbow"
            app:layout_constraintStart_toEndOf="@+id/swordman"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="392dp"
            android:layout_marginStart="28dp"/>

    <Button
            android:text="Knight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/knight"
            app:layout_constraintStart_toEndOf="@+id/longbow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="392dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="1.0"/>

    <Button
            android:text="Spearman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spearman"
            app:layout_constraintTop_toBottomOf="@+id/swordman"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>

    <Button
            android:text="Shortbow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shortbow"
            app:layout_constraintStart_toEndOf="@+id/spearman"
            app:layout_constraintTop_toBottomOf="@+id/longbow"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"/>

    <Button
            android:text="Cuirassier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cuirrasier"
            app:layout_constraintStart_toEndOf="@+id/shortbow"
            app:layout_constraintTop_toBottomOf="@+id/knight"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="24dp"/>

    <Button
            android:text="Hatchetman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hatchetman"
            tools:layout_editor_absoluteX="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spearman"
            android:layout_marginTop="16dp"/>

    <Button
            android:text="Crossbow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crossbow"
            app:layout_constraintStart_toEndOf="@+id/hatchetman"
            app:layout_constraintTop_toBottomOf="@+id/shortbow"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    <Button
            android:text="Archer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mountedArcher"
            app:layout_constraintTop_toBottomOf="@+id/cuirrasier"
            app:layout_constraintStart_toEndOf="@+id/crossbow"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:text="Infantry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="356dp"
            android:layout_marginStart="56dp"/>

    <TextView
            android:text="Archer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="168dp"/>

    <TextView
            android:text="Mounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>