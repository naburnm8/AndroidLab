<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="105dp">


    <TextView
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentBottom="true"
            android:background="#808080"/>

    <TextView
            android:text="Player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nicknameList"
            android:layout_marginBottom="0dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:textSize="20sp"
            android:layout_marginTop="39dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/player2Name"
            android:layout_marginEnd="117dp"
            android:layout_alignBottom="@+id/player2Name"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="01.01.1970 00:00"
            android:layout_width="116dp"
            android:layout_height="20dp"
            android:id="@+id/dateRegistrationList"
            android:textAlignment="viewStart"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="268dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="73dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/nicknameList"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winPercentageList"
            android:layout_above="@+id/border2"
            android:layout_marginBottom="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textAlignment="viewEnd"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favouriteUnitTypeList"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38dp"
            android:textAlignment="viewEnd"/>


</RelativeLayout>