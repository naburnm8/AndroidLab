<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nicknameProfile"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="Date of registration: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/nicknameProfile"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="Win percentage: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="Favourite unit: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="Status: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="TextView"
            android:layout_width="166dp"
            android:layout_height="32dp"
            android:id="@+id/dateOfRegistration"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4"/>

    <TextView
            android:text="TextView"
            android:layout_width="207dp"
            android:layout_height="31dp"
            android:id="@+id/winPercentage"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5"/>

    <TextView
            android:text="TextView"
            android:layout_width="227dp"
            android:layout_height="32dp"
            android:id="@+id/favouriteUnit"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6"/>

    <TextView
            android:text="TextView"
            android:layout_width="299dp"
            android:layout_height="33dp"
            android:id="@+id/status"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"/>
</androidx.constraintlayout.widget.ConstraintLayout>