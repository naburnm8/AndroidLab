<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Widget.AppCompat.Button.Colored" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/purple</item>
    </style>
    <style name="Widget.AppCompat.TextView.Colored" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SwitchableTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textViewStyle">@style/Widget.AppCompat.TextView.Colored</item>
    </style>
</resources>